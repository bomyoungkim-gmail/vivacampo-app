# Environment
ENV=local
LOG_LEVEL=DEBUG

# Auth
JWT_SECRET=dev-secret-key-change-me
JWT_ISSUER=vivacampo.ag
JWT_AUDIENCE=vivacampo-api
SYSTEM_ADMIN_ISSUER=vivacampo-admin
SYSTEM_ADMIN_AUDIENCE=vivacampo-admin

# Session
SESSION_JWT_SECRET=dev-session-secret-change-me
